/* pages/calendar/gm_calendar.wxss */
.calendar{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.week{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  background:  #f2f2f2;
  font-size: 30rpx;
  padding: 11rpx;
}
.weekday{
  display: flex;
  flex: 1;
  justify-content: center;
}
.month{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  height: 100rpx;
}
.month_select{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.month_select_left{
  display: flex;
  flex: 1;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  padding-left:50rpx;
}
.month_select_left:active{
  background-color: #e6e6e6
}
.month_select_right:active{
  background-color: #e6e6e6
}
.month_select_right{
  display: flex;
  flex: 1;
  justify-content: flex-end;
  align-items: center;
  height: 100%;
  padding-right:50rpx;
}
.left {
  border: solid #00A6E4;
  border-width: 0 5rpx 5rpx 0;
  /* display: inline-block; */
  padding: 8rpx;
  transform: rotate(135deg);
  height: 5rpx;
  width: 5rpx;
}
.right {
  border: solid #00A6E4;
  border-width: 0 5rpx 5rpx 0;
  /* display: inline-block; */
  padding: 8rpx;
  transform: rotate(-45deg);
  height: 5rpx;
  width: 5rpx;
}
