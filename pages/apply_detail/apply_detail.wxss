/* pages/apply_detail/apply_detail.wxss */
.check{
   padding:50rpx 20rpx;
   display: flex;
   flex: 1;
   justify-content: center;
   align-items: center;
}
.weui-panel__hd:after{
    border-bottom:none;
}
.weui-cell:after{
  border-bottom:none;
}

.bottom-select-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  height: 300rpx;
  background-color: #fff;
}
/*动画前初始位置*/
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}
.text{
  color: #999;
  font-size: 12px;
  line-height: 1.2;
}
.notification{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  color: white;
  background-color: #00A6E4;
  opacity: 0.3;
  padding: 10rpx;
  font-size: 28rpx;
}
.title{
  display: flex;
  flex: 1;
  justify-content: center;
  font-size: 36rpx;
  color: #000000
}
.content{
  color:    #666666;
  font-size: 30rpx;
}
.first_title{
  padding-top: 20rpx;
  padding-bottom:10rpx;
  color: #000000;
  font-size: 32rpx
}
.second_title{
  padding-top: 14rpx;
  padding-bottom: 7rpx;
  color: #262626 
}
.annux_panel{
  display: flex;
  flex: 1;
  padding: 10px 15px;
  background: white;
  justify-content: center;
  align-items: center;
}
.annux_left{
  display: flex;
  flex: 1.2;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
annux_image{
  display: flex;
  flex: 1
}
.annux_text{
  display: flex;
  flex: 1;
  padding-top: 20rpx;
}
.annux_right{
  display: flex;
  flex: 2.5;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.annux_item{
  display: flex;
  flex: 1;
  width: 100%;
  justify-content: center;
  align-items: center;
  padding:10rpx;
}
.item_text{
  display: flex;
  flex: 2;
  justify-content: flex-start;
}
.item_count{
  display: flex;
  flex: 1.5;
  justify-content: flex-end;
}
._text{
  background: #f2f2f2;
  padding:5rpx 15rpx;
  border-radius: 10rpx;
}