/* pages/order_detail/order_detail.wxss */
page{
  height: 100%;
}
.page{
  height: 100%;
  overflow: scroll;
}
.status{
  background: #00A6E4;
  display: flex;
  flex: 1;
  justify-content: center;
  padding: 40rpx 0rpx 50rpx 0rpx;
  color: white;
  font-size: 40rpx
}
.item{
  display: flex;
  flex: 1;
  align-items: center;
}
.left{
  display: flex;
  flex: 2;
}
.right{
  display: flex;
  flex: 1;
  justify-content: flex-end
}
.item_panel{
  background: white;
  margin-top:20rpx;
  padding:15px;
  display: flex;
  flex: 1;
  align-items: center;
}
.panel_left{
  display: flex;
  flex: 2;
}
.panel_right{
  display: flex;
  flex: 3;
  justify-content: flex-end
}
.input{
  border-bottom: 1px solid #d9d9d9;
  margin:5rpx 40rpx;
  padding:10rpx 5rpx;
}
.picker{
  border-bottom: 1px solid #d9d9d9;
  margin:30rpx 40rpx 50rpx 40rpx;
  padding:10rpx 5rpx;
}
.panel{
  display: flex;
  flex: 1;
  align-items: center;
}
.panel:active{
  background:  #f2f2f2
}
.detail{
   flex: 3.5
}
.arrow{
   display: flex;
   flex: 1;
   justify-content: flex-end;
   padding-right: 20rpx;
   align-items: center;
   font-size: 28rpx;
}
.cancel{
  display: flex;
  flex: 1;
  justify-content: center;
  color:  #999999
}