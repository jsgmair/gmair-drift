@import './style/weui.wxss';

.page{
    background-color: #F8F8F8;
    font-size: 30rpx;
    font-family: -apple-system-font,Helvetica,Helvetica Neue,sans-serif;
    font-weight: 200;
}
.page__hd {
  padding: 30rpx 50rpx;
}

.page__bd {
    padding-bottom: 80rpx;
}
.page__bd_spacing {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.page__ft{
    padding-bottom: 20rpx;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 40rpx;
    font-weight: 350;
}

.page__desc {
    margin-top: 10rpx;
    color: black;
    text-align: left;
    font-size: 28rpx;
    font-weight: 300;
}
.weui-btn{
   width: 80%;
}
button[disabled][type=primary] {
   background-color:#b3eaff;
}
button[type=primary] {
color:#FFFFFF;
background-color:#00A6E4;
}